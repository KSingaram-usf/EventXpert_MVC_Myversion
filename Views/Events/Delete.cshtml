@model EventXpert.Models.Event
@{
    ViewData["Title"] = "Delete Event";
}

<h2>Delete Event</h2>

<p>Are you sure you want to delete this event?</p>

<p><strong>Match:</strong> @Model.Match</p>
<p><strong>Date:</strong> @Model.Date.ToString("MMM dd, yyyy")</p>
<p><strong>Venue:</strong> @Model.Venue</p>
<p><strong>Price ($):</strong> @Model.Price</p>

<form asp-action="DeleteConfirmed" method="post">
    <input type="hidden" asp-for="Id" />
    <button type="submit" class="button-like">Delete</button>
    <a asp-action="Index">Cancel</a>
</form>
