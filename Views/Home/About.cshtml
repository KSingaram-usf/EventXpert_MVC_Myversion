    <section class="schema-section">
        <h2>Data Schema Overview</h2>
        <div class="schema-box">
            <h3>SPORTS_EVENT</h3>
            <ul>
                <li>&bull; Match (text)</li>
                <li>&bull; Date (text)</li>
                <li>&bull; Venue (text)</li>
                <li>&bull; Price (text)</li>
            </ul>
        </div>
    </section>

    <section class="er-diagram">
        <h2>Logical Data Model (ER Diagram)</h2>
        <div class="er-box">
            <div class="entity">
                <h4>Team</h4>
                <p>PK: TeamID</p>
                <p>Name, League</p>
            </div>
            <div class="entity">
                <h4>Event</h4>
                <p>PK: EventID</p>
                <p>FK: TeamID → Team</p>
                <p>FK: VenueID → Venue</p>
                <p>Date, Price</p>
            </div>
            <div class="entity">
                <h4>Venue</h4>
                <p>PK: VenueID</p>
                <p>Name, Location, Capacity</p>
            </div>
            <div class="relationship">
                <p>Team → Event (1:N)</p>
                <p>Venue → Event (1:N)</p>
            </div>
        </div>
    </section>
</div>
